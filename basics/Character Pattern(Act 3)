//solution in C
#include <stdio.h>

int main(void) {
	
	int n,a,b,x,y,i,j;
	scanf("%d", &n);
	while (n--){
      scanf("%d %d" , &a , &b);
      a = x+1 + 2*x;
      b = y+1 + 2*y;
       for ( i=0 ; i < a; i++){
          for ( j=0; j < b; j++){
                if ( i == 0 || i == a-1 || j == 0 || j == b-1 || ((i)%3==0) || ((j) % 3 == 0))
                printf("*");
                else
                printf(".");

        }
        printf("\n");
      }
      printf("\n");


    }

	return 0;
}
